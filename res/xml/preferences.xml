<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:defaultValue="240"
        android:dialogTitle="Fake density"
        android:key="density"
        android:summary="@string/pref_density_summary"
        android:title="Fake density" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="debug"
        android:summary="Shows an additional menu item to access Play Store&apos;s debug settings"
        android:title="Enable debug menu" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="calculateLayout"
        android:summary="Calculate screen layout"
        android:title="Automatic Calculate Screen Layout" />

    <ListPreference
        android:defaultValue="2"
        android:key="screenLayout"
        android:title="Fake screen layout"
        android:summary="@string/pref_layout_summary"
        android:entries="@array/screenLayout"
        android:entryValues="@array/screenLayoutValue" />

</PreferenceScreen>